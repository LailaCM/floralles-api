generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoUsuario {
  ADMIN
  USER
}

model User {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  foto     String?
  tipo     TipoUsuario @default(USER)
  password String
}

model Plantas{
  id            Int @id @default(autoincrement())
  nome_p        String 
  nome_c        String 
  especie       String 
  classe        String 
  origem        String 
  descricao     String @db.Text
  beneficios    String @db.Text
  img           String @db.Text
}
